{% extends 'base.html.twig' %}

{% block title %}Aliment
{% endblock %}

{% block body %}
	<div class="container mt-4">

		<div class="row">
		<div>
		<a href="{{path('aliment')}}" class="btn btn-primary">tous</a>
		<a href="{{path('afficherParCalorie', {'calorie': 40})}}" class="btn btn-primary">Entre 50 et 100 calorie</a>
			<a href="{{path('afficherParGlucide', {'glucide': 3})}}" class="btn btn-primary">Entre 50 et 100 glucide</a></div>
			{% for aliment in aliments %}
				<div class="col-12 col-md-6 col-lg-4 col-xl-3 mt-4">
				
					<div class="card border-primary mb-3 mx-auto" style="max-width:20rem">
						<div class="card-header text-center">
							<img src="{{asset('/images/aliments/' ~ aliment.image )}}" alt="" style="width:70px">
						</div>
						<div class="card-body">
							<h3 class="card-title text-center pb-2 border-bottom border-primary">{{aliment.nom}}</h3>
							<p class="card-text">
								<h4 class="text-center">
									Prix (kilo) :
									{{ aliment.prix }}</h4>

								<table class="table text-center">
									<tr class="table-primary">
										<td>Propriete</td>
										<td>Valeur</td>
									</tr>
									<tr>
										<td>Calorie</td>
										<td>{{ aliment.calorie}}</td>
									</tr>
									<tr>
										<td>Glucide</td>
										<td>{{ aliment.glucide}}</td>
									</tr>
									<tr>
										<td>Proteine</td>
										<td>{{ aliment.proteine}}</td>
									</tr>
									<tr>
										<td>Lipide</td>
										<td>{{ aliment.lipide}}</td>
									</tr>


								</table>

							</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


{% endblock %}
